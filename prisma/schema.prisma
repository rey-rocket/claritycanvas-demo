generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  role      String    @default("member")
  teams     TeamUser[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Team {
  id         String             @id @default(cuid())
  name       String
  users      TeamUser[]
  projects   Project[]
  capacities DesignerCapacity[]
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  @@index([name])
}

model TeamUser {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      String   @default("member")

  @@unique([teamId, userId])
}

model Project {
  id                    String      @id @default(cuid())
  team                  Team        @relation(fields: [teamId], references: [id])
  teamId                String
  title                 String
  client                String
  instructionalDesigner String
  status                String      // PLANNING, IN_PROGRESS, REVIEW, HANDOVER
  priority              String?     // A, B, C
  dueDate               DateTime
  earlyReminderDate     DateTime?
  estimatedScopedHours  Float
  hoursWorked           Float       @default(0)
  mediaBudget           String?
  notes                 String?
  tasks                 Task[]
  timeEntries           TimeEntry[]
  createdBy             String
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  @@index([teamId])
  @@index([status])
  @@index([dueDate])
}

model Task {
  id             String   @id @default(cuid())
  project        Project  @relation(fields: [projectId], references: [id])
  projectId      String
  name           String
  completed      Boolean  @default(false)
  estimatedHours Float?

  @@index([projectId])
}

model DesignerCapacity {
  id                   String   @id @default(cuid())
  team                 Team     @relation(fields: [teamId], references: [id])
  teamId               String
  designerName         String
  weeklyAvailableHours Float
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@unique([teamId, designerName])
  @@index([teamId])
}

model TimeEntry {
  id             String    @id @default(cuid())
  project        Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId      String
  designerName   String
  description    String?
  hours          Float
  date           DateTime
  isTimerEntry   Boolean   @default(false)
  timerStartedAt DateTime?
  timerEndedAt   DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([projectId])
  @@index([designerName])
  @@index([date])
}
